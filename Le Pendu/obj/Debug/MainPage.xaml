<Page
    x:Class="Le_Pendu.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Le_Pendu"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FFFFDEFF">
        <!-- Ce code correspond à la vue de votre page, vous pouvez "drag and droppé" les éléments depuis la boite à outils
            ou alors vous pouvez modifier directement ce code. Grâce à visual studio, vous avez également l'auto-complétion pour
            ce langage-là
        -->
        
        <TextBlock x:Name="wordToFind" Margin="10,25,10,0" TextWrapping="Wrap" FontSize="36" Height="49" VerticalAlignment="Top" Text="_ _ _ _ _ _" TextAlignment="Center" Foreground="Black"/>
        <Image x:Name="PenduImg" Margin="10,104,10,163" Source="Assets/Pendu/1.png"/>
        <ScrollViewer IsTabStop="True" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
            <TextBox x:ConnectionId='1' x:Name="MyTextBox" IsTabStop="True" Margin="10,538,10,64" TextWrapping="Wrap" VerticalAlignment="Stretch"                                  />
        </ScrollViewer>
        <TextBlock x:Name="Compteur" Margin="156,0,155,10" TextWrapping="Wrap" VerticalAlignment="Bottom" Height="37" FontSize="36" TextAlignment="Center" Foreground="Black"/>
    </Grid>
</Page>

